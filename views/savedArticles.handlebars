{{#if objEmpty}}
	<h2 class="cntr">Please save some articles first to view here.</h2><br>
{{else}}
	{{#each articleObj}}

		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12 articleRows">

				<!-- header -->
				<div class="row">
					<div class="col-sm-8 col-md-8 col-lg-8">
						<a href="{{this.link}}" style="font-size: 20px" target="_blank">{{this.headline}}</a> <br>
						<p>{{this.byline}}</p>
					</div>
					<div class="col-sm-4 col-md-4 col-lg-4 saveBtnCol">
						<button class="addNotesBtn" data-id={{this._id}} type="button">Article Notes</button>
						<button class="deleteSavedBtn" data-id={{this._id}} type="button">Delete from saved</button>
					</div>
				</div>
				<hr>
				<!-- summary -->
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-12">
						<img alt="image" src="{{this.imageURL}}" width="50px" height="50px">
						<p class="sumry">{{this.summary}}</p>
					</div>
				</div>
			</div>
		</div>
		
	{{/each}}
{{/if}}
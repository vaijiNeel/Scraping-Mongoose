{{#if objEmpty}}
	<h2 class="cntr">Scrape New York Times <br> </h2>
{{else}}
	<!-- Show the modal -->
	<!-- $("#scrapeCompleteModal").modal("toggle"); -->
	{{#each articleObj}}

		<div class="row articleRows">
			<div class="col-sm-12 col-md-12 col-lg-12">

				<!-- header -->
				<div class="row">
					<div class="col-sm-9 col-md-9 col-lg-9">
						<a href="{{this.link}}">{{this.headline}}</a>
						<p>{{this.byline}}</p>
					</div>
					<div class="col-sm-3 col-md-3 col-lg-3 saveBtnCol">
						<button class="saveArtBtn" data-id={{this._id}} type="button">Save Article</button>
					</div>
				</div>

				<!-- summary -->
				<div class="row">
					<div class="col-sm-3 col-md-3 col-lg-3">
						<img alt="image" src="{{this.imageURL}}" width="50px" height="50px">
					</div>
					<div class="col-sm-9 col-md-9 col-lg-9">
						<p>{{this.summary}}</p>
					</div>
				</div>
			</div>
		</div>
		<hr>
	{{/each}}
{{/if}}